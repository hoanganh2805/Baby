<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">English</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to englishes_path, class: button_class(theme: "transparent") do %>
      All Englishes
      <% end %>
      <%= link_to edit_english_path(@english), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Title:</p>
        <p><%= @english.title %></p>
      </li>
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @english.name %></p>
      </li>
  </ul>
</div>
